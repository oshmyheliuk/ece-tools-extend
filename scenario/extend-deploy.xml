<?xml version="1.0"?>
<scenario xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../vendor/magento/ece-tools/config/scenario.xsd">
    <!-- Replace remove-deploy-failed-flag step with custom stem -->
    <step name="remove-deploy-failed-flag" type="Magento\EceToolExtend\Step\Deploy\RemoveDeployFailedFlag" priority="100"/>
    <!-- Skip "cache" sub-step in pre-deploy step -->
    <step name="pre-deploy" type="Magento\MagentoCloud\Step\Deploy\PreDeploy">
        <arguments>
            <argument name="logger" xsi:type="object">Psr\Log\LoggerInterface</argument>
            <argument name="steps" xsi:type="array">
                <item name="cache" xsi:type="object"/>
            </argument>
        </arguments>
    </step>
    <step name="unlock-cron-jobs" priority="100"/> <!-- Step unlock-cron-jobs will be skipped -->
    <step name="validate-config" type="Magento\MagentoCloud\Step\ValidateConfiguration" priority="300">
        <arguments>
            <argument name="logger" xsi:type="object">Psr\Log\LoggerInterface</argument>
            <argument name="validators" xsi:type="array">
                <item name="500" xsi:type="array">
                    <!-- Skip all critical validators -->
                    <item name="database-configuration" xsi:type="object"/>
                    <item name="search-configuration" xsi:type="object"/>
                    <item name="resource-configuration" xsi:type="object"/>
                    <item name="session-configuration" xsi:type="object" />
                    <item name="elasticsuite-integrity" xsi:type="object" />
                </item>
            </argument>
        </arguments>
    </step>
    <!-- Added new step into the beginning of deploy scenario -->
    <step name="new-pre-deploy-step" type="Magento\EceToolExtend\Step\Deploy\PreDeploy" priority="10"/>
</scenario>
