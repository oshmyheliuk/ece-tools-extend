<scenario xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../vendor/magento/ece-tools/config/scenario.xsd">
    <step name="remove-deploy-failed-flag" type="Magento\EceToolExtend\Step\Deploy\RemoveDeployFailedFlag" priority="100"/>
    <step name="pre-deploy" type="Magento\MagentoCloud\Step\Deploy\PreDeploy">
        <arguments>
            <argument name="logger" xsi:type="object">Psr\Log\LoggerInterface</argument>
            <argument name="steps" xsi:type="array">
                <item name="cache" xsi:type="object"/>
            </argument>
        </arguments>
    </step>
    <step name="unlock-cron-jobs"/> <!-- Step unlock-cron-jobs will be skipped -->
    <step name="validate-config" type="Magento\MagentoCloud\Step\ValidateConfiguration">
        <arguments>
            <argument name="logger" xsi:type="object">Psr\Log\LoggerInterface</argument>
            <argument name="validators" xsi:type="array">
                <item name="500" xsi:type="array">
                    <item name="database-configuration" xsi:type="object" priority="3"/>
                    <item name="search-configuration" xsi:type="object" priority="2"/>
                    <item name="resource-configuration" xsi:type="object" priority="1" />
                    <item name="session-configuration" xsi:type="object" />
                    <item name="elasticsuite-integrity" xsi:type="object" />
                </item>
            </argument>
        </arguments>
    </step>
</scenario>
